---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button";
import Quote from "../components/Quote.astro";

import ScrollVelocity from "../components/ScrollVelocity";
---

<Layout title="Kluge Kerlchen Merch Sachen und so">
  <main class="relative overflow-hidden">
    <div
      class="absolute left-[50%] top-12 -z-10 h-[500px] w-[500px] translate-x-[75%] bg-main-light [-webkit-mask:url('/blobs/blob_1.svg')_no-repeat_center] [mask:url('/blobs/blob_1.svg')_no-repeat_center] dark:bg-main-dark"
    >
    </div>
    <div
      class="absolute left-[50%] top-32 -z-10 h-[250px] w-[250px] translate-x-[-250%] bg-main-light [-webkit-mask:url('/blobs/blob_2.svg')_no-repeat_center] [mask:url('/blobs/blob_2.svg')_no-repeat_center] dark:bg-main-dark"
    >
    </div>
    <div
      class="absolute left-[50%] top-[300px] -z-10 h-[300px] w-[300px] translate-x-[-400%] bg-main-light [-webkit-mask:url('/blobs/blob_3.svg')_no-repeat_center] [mask:url('/blobs/blob_3.svg')_no-repeat_center] dark:bg-main-dark"
    >
    </div>
    <div class="relative mb-16 p-6">
      <h1 class="mb-4 text-center text-[2.5rem] leading-[1.25] lg:text-[4rem]">
        Ben Seyer's wonderful Shop™
      </h1>
      <p class="mb-20 text-center text-[1.5rem]">
        You want Kluge Kerlchen Merch? You are at the right spot!
      </p>
      <Button text={"Shop for Merch"} client:load />
    </div>
    <div>
      <h2 class="mb-4 text-center text-[2rem] lg:text-[3rem]">
        Some words from the Founder
      </h2>
      <div
        class="mx-auto flex w-full max-w-[1000px] flex-wrap justify-center gap-12 p-12"
      >
        <Quote text="öffne Suchmaschine" author="Ben Seyer" />
        <Quote text="Batman" author="Ben Seyer" />
        <Quote
          text="Gibt es irgendwelche junge Kinder, die man nutzen könnte?"
          author="Ben Seyer"
        />
        <Quote text="scharfe Chips sind scharf" author="Ben Seyer" />
      </div>
    </div>
  </main>
</Layout>
